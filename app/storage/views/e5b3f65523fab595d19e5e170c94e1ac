        <?php echo $__env->yieldContent('body'); ?>


            <h2>Konferanseprogram</h2>



<div class="well">
    <div class="form-group">
     <?php echo Form::open(array('action' => array('ProgramController@view_date'), 'method' => 'post')); ?>

     <?php echo Form::label('in_program','Velg dag'); ?>


     <?php

     $progs = array();
     $progs[] = "Alle";
     $progs[] = "Mandag 27/10";
     $progs[] = "Onsdag 29/10";
        ?>

     <?php echo Form::select('date', $progs, 'date_id'); ?>

     <?php echo Form::submit('Vis program for valgt dato', array('class' => 'btn btn-primary')); ?>

     <?php echo Form::close(); ?>


    </div>
 </div>

<?php foreach($items as $sessions): ?>
     <div class="panel panel-default">
        <div class="panel-heading">
              <h3 class="panel-title"><span class="glyphicon glyphicon-time"></span> <?php echo e($sessions['date']); ?> / <?php echo e($sessions['time_from']); ?> - <?php echo e($sessions['time_to']); ?></h3>
        </div>
       <?php foreach($sessions['data'] as $session): ?>
            <?php if($session->program_confirmed == 1): ?>
                <div class="panel panel-success">
             <?php else: ?>
                <div class="panel panel-danger">
             <?php endif; ?>
        <div class="panel-heading">
            <h3 class="panel-title"> <?php echo e($session->title); ?>

                <?php if($session->program_confirmed == 0): ?>
                    <span class='badge'>Kansellert</span>
                <?php endif; ?>
            </h3>
        </div>
        <div class="panel-body">
            <?php if($session->program_confirmed == 1): ?>
                <p><span class='glyphicon glyphicon-globe'>Rom: <?php echo e($session->program_location); ?></span>
                <p><span class="glyphicon glyphicon-zoom-in"></span><a href="program/<?php echo e($session->id); ?>">Les mer</a></p>
            <?php endif; ?>

            <?php if( ($session->program_confirmed == 1) && ($session->program_type == 0) ): ?>
                <p><span class='glyphicon glyphicon-facetime-video'></span> Videostrømming er tilgjenglig</p>
            <?php endif; ?>
        </div>
        <div class="panel-footer">
            <?php if($session->program_confirmed == 1): ?>
                <?php if(Auth::check()): ?>
                    <?php if($session->user_has_program_on_agenda == 1): ?>
                        <?php echo Form::open(array('action' => array('UserProgramController@remove'), 'method' => 'post')); ?>

                        <?php echo Form::hidden('programId',  $session->id  ); ?>

                        <?php echo Form::submit('Fjern fra min agenda', array('class' => 'btn btn-block')); ?>

                        <?php echo Form::close(); ?>

                    <?php else: ?>
                         <?php echo Form::open(array('action' => array('UserProgramController@add'), 'method' => 'post')); ?>

                        <?php echo Form::hidden('programId',  $session->id  ); ?>

                        <?php echo Form::submit('Legg til fra min agenda', array('class' => 'btn btn-block')); ?>

                        <?php echo Form::close(); ?>

                    <?php endif; ?>
                <?php else: ?>
                        <?php echo Form::open(array('action' => array('UseController@login'), 'method' => 'get')); ?>

                        <?php echo Form::hidden('programId',  $session->id  ); ?>

                        <?php echo Form::submit('Logg inn for å legge til i agenda', array('class' => 'btn btn-block')); ?>

                        <?php echo Form::close(); ?>

                <?php endif; ?>
            <?php endif; ?>

       </div>
       </div>
    <?php endforeach; ?>
</div>
<?php endforeach; ?>


